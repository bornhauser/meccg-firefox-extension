{
  "manifest_version": 2,
  "name": "MeCCG Cards Visualizer",
  "version": "1.0",
  "description": "Replace and extend names of MeCCG cards with a hover image preview",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/main/beastify",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_action": {
    "default_popup": "/popup/popup.html",
    "default_title": "MeCCG Cards Visualizer"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "cards/metw.js",
        "cards/metd.js",
        "cards/medm.js",
        "cards/mele.js",
        "cards/meas.js",
        "cards/mewh.js",
        "cards/meba.js",
        "jquery.js",
        "app.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "activeTab"
  ]
}
