{
  "manifest_version": 2,
  "name": "MeCCG Cards Visualizer",
  "version": "1.0",
  "description": "Adds a red border to all webpages matching twitch.tv",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "cards/metw.js",
        "cards/metd.js",
        "cards/medm.js",
        "cards/mele.js",
        "cards/meas.js",
        "cards/mewh.js",
        "cards/meba.js",
        "jquery.js",
        "app.js"
      ]
    }
  ],
  "permissions": [
    "webRequest"
  ]
}
